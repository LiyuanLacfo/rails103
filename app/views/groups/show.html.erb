<div class="col-md-12">
	<div class="group">
		<span class="pull-right">
			<% if current_user.is_member_of?(@group) %>
				<%= link_to("Quit", quit_group_path, method: :post, class: "btn btn-default")%>
				<label class="label label-success">是群组成员</label>
			<% else %>
				<%= link_to("Join", join_group_path, method: :post, class: "btn btn-default") %>
				<label class="label label-warning">不是群组成员</label>
			<% end %>
		</span>
		<% if current_user == @group.user %>
			<div class="group">
				<%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
			</div>
		<% end %>
		<%= link_to("Write a post", new_group_post_path(@group), class: "btn btn-primary pull-right") %>
	</div>

	<div>
		<h2><%= @group.title %></h2>
		<p><%= @group.description %></p>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>文章内容</th>
				<th>文章作者</th>
				<th>发表时间</th>
			</tr>
		</thead>
		<tbody>
			<% @posts.each do |post| %>
				<tr>
					<td><%= post.content %></td>
					<td><%= post.user.email %></td>
					<td><%= post.created_at %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<div class="text-center">
		<%= will_paginate @posts%>
	</div>
</div>