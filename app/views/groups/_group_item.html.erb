<tr>
	<td>#</td>
	<td><%= link_to(group.title, group_path(group)) %></td>
	<td><%= group.description %></td>
	<td><%= group.user.email %></td>
	<% if group.user == current_user %>
		<td><%= link_to("Edit", edit_group_path(group), class: "btn btn-primary btn-default") %></td>
		<td><%= link_to("Delete", group_path(group), method: :delete, 
		data: {confirm: "Are you sure?"},class: "btn btn-primary btn-default") %>
		</td>
	<% end %>
</tr>